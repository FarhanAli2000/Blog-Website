<div class="author">
    <h1 class="author__heading">Hi, I am Farhan</h1>
    <p class="author__body">Mern Stack Developer</p>
</div>

<img src="/img/hero-image.jpeg" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>  <!-- Opening EJS loop -->
        <li>
            <a href="/post/><%= post._id%>">
                <span><%= post.title %></span> <!-- Output post title -->
                <span class="article-list__date"><%= post.createdAt %></span> <!-- Output post date -->
                <!-- <span class="article-list__date"><%= post.createdAt.toDateString%></span>  -->
            </a>
        </li>
        <% }) %>  <!-- Closing EJS loop -->
    </ul>


<% if(nextPage !==null){ %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt;View Older Posts</a>
<% } %>

   
</section>
